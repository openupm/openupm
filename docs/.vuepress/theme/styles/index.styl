// Load custom styles
@import './spectre/spectre.styl'
@import './spectre/spectre-exp.styl'
@import './spectre/spectre-icons.styl'

.tooltip-click:hover::after
  opacity 0

.tooltip-click:focus::after,
.tooltip-click:active::after
  opacity: 1;
  transform: translate(-50%, -.2rem);

// Fix documentation style issues caused by spectre overriden.
h1, .h1
  font-size 1.8rem

h2, .h2
  font-size 1.3rem

h3, .h3
  font-size 1.1rem

h4, .h4
  font-size 1rem

h5, .h5
  font-size 1rem

h6, .h6
  font-size 0.8rem

h1, h2, h3, h4, h5, h6
  font-family $titleFontFamily

ul
  list-style: disc outside

code, kbd, .line-number
  font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

// Page layout.
main
  padding $navbarHeight 0 0
  max-width $pageWidth
  margin 0 auto

  &.page
    padding-top 0

.theme-default-content
  font-size 15px
  &:not(.custom)
    padding 1rem
    > h1:first-child
      margin-top 0
  p
    margin-block-start 1em
    margin-block-end 1em
    margin-inline-start 0
    margin-inline-end 0

.breadcrumb-wrap
  margin-bottom 0.8rem

.hide
  display none

.sidebar
  .sidebar-link
    text-decoration none
    &:focus
      box-shadow none
    &:visited
      color $textColor
    &.active
      color $accentColor
  .sidebar-links
    li
      margin-top 0rem !important
    li
      a
        &.sidebar-link
          font-size 0.8rem !important
          line-height 1.5 !important
  .sidebar-sub-headers
    li
      margin-top 0
      a
        &.sidebar-link
          font-size 0.7rem !important

.page-edit
  padding-left 1rem !important
  padding-right 1rem !important
.page-nav
  padding-left 1rem !important
  padding-right 1rem !important

.tile .tile-title
  margin-top 0 !important

.vuepress-flowchart
  overflow auto
